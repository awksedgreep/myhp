# Environment Variables Example
# Copy this file to .env and update with your values

# Phoenix Configuration
SECRET_KEY_BASE=your_secret_key_base_here_generate_with_mix_phx_gen_secret
PHX_HOST=localhost
PORT=4000
PHX_SERVER=true

# Database Configuration (Production)
DATABASE_PATH=/path/to/your/production/database.db
POOL_SIZE=5

# Email Configuration (Optional)
EMAIL_FROM=noreply@yourdomain.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# File Upload Configuration
UPLOAD_PATH=priv/static/uploads
MAX_FILE_SIZE=10485760

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_COMMENTS=true
ENABLE_CHAT=true
ENABLE_FILE_UPLOADS=true

# Analytics & Monitoring (Optional)
ANALYTICS_ID=your_analytics_id
SENTRY_DSN=your_sentry_dsn

# DNS Cluster (Production)
DNS_CLUSTER_QUERY=your_app_name.internal